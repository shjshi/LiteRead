<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.LiteReade.Light.NoActionBar" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionModeOverlay">true</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="popupTheme">@style/Widget.AppCompat.Light.PopupMenu.Overflow</item>
        <item name="textAppearanceLargePopupMenu">
            @style/Theme.LiteReade.PopupMenuTextAppearanceLarge
        </item>
        <item name="android:textAppearanceLargePopupMenu">
            @style/Theme.LiteReade.PopupMenuTextAppearanceLarge
        </item>
    </style>
    <style name="Theme.LiteReade.Prefs" parent="Theme.LiteReade.Light.NoActionBar">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.LiteReade.PopupMenuTextAppearanceLarge" parent="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large">
        <item name="android:textColor">@android:color/black</item>
    </style>
</resources>